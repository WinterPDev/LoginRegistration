@model LoginUser

<div class="text-center">

    <form action="loginUser" method="post">
        <div class="form-group row">
            <label for="Email">Email : </label>
            <input asp-for="Email" class="ml-2">
            <span class=" ml-2 text-danger" asp-validation-for="Email"></span>
        </div>
        <div class="form-group row">
            <label for="Password">Password : </label>
            <input asp-for="Password" class="ml-2">
            <span class=" ml-2 text-danger" asp-validation-for="Password"></span>
        </div>

        <div class="form-group row">
            <input type="submit" value="Login" class="btn btn-info m-1">
            <a type="button" class="btn btn-primary text-light row m-1" href="/">Register</a>
        </div>
    </form>
</div>