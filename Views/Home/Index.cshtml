@{
    ViewData["Title"] = "Home Page";
}

@model User

<div class="text-center">

<form action="registerUser" method="post">
    <div class="form-group row">
        <label for="FirstName">First Name : </label>
        <input asp-for="FirstName" class="ml-2">
        <span class=" ml-2 text-danger" asp-validation-for="FirstName"></span>
    </div>
    <div class="form-group row">
        <label for="LastName">Last Name : </label>
        <input asp-for="LastName" class="ml-2">
        <span class=" ml-2 text-danger" asp-validation-for="LastName"></span>
    </div>
    <div class="form-group row">
        <label for="Email">Email : </label>
        <input asp-for="Email" class="ml-2">
        <span class=" ml-2 text-danger" asp-validation-for="Email"></span>
    </div>
    <div class="form-group row">
        <label for="Password">Password : </label>
        <input asp-for="Password" class="ml-2">
        <span class=" ml-2 text-danger" asp-validation-for="Password"></span>
    </div>
    <div class="form-group row">
        <label for="Confirm">Confirm Password : </label>
        <input asp-for="Confirm" class="ml-2">
        <span class=" ml-2 text-danger" asp-validation-for="Confirm"></span>
    </div>
            <div class="form-group row">
                <input type="submit" value="Register" class="btn btn-info m-1">
                <a type="button" class=" btn btn-primary text-light m-1" href="/Login">Login</a>
            </div>

</form>
</div>
